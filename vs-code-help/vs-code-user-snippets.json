  "print_r": {
    "prefix": "_pri",
    "body": [
      "echo '<br>'.basename(__FILE__).' '.__LINE__.'<pre> data :: '; print_r($$data); echo '</pre>'; exit;"
    ],
    "description": "echo '<pre>'; print_r($data); echo '</pre>;"
  },

  "ajax": {
    "prefix": "_ajax",
    "body": [
      "$.ajax({",
      "url: 'url.php',",
      "type: 'POST',",
      "data: {id:data}",
      "success: function(response){",
      "alert(response);",
      "window.location.href = 'url';",
      "}",
      "});"
    ],
    "description": "ajax function"
  },

  "foreach": {
    "prefix": "_for",
    "body": ["foreach($data as $key=>$value){", "echo $value[$key];", "}"],
    "description": "foreach loop"
  },

  "alertbox": {
    "prefix": "alert",
    "body": [
      "$.bootstrapGrowl('Date cannot be greater than current date', { type: 'danger' });"
    ],
    "description": "bootstrapGrowl alert"
  },

  "addjscode_admin": {
    "prefix": "addscript",
    "body": [
      "{% set jscode %}<script type='text/javascript'>jQuery('#frmuser_register').validate();</script>{% endset %}",
      "{{ addScript(jscode) }}"
    ],
    "description": "addScript(jscode)"
  },

  "addcomments": {
    "prefix": "_comphp",
    "body": [
      "//=========================changes done by mayank singh==========================//"
    ],
    "description": "comment in php"
  },

  "comments_in_twig": {
    "prefix": "_#",
    "body": [
      "{# // !=========================changes done by mayank singh==========================// #}"
    ],
    "description": "comment in twig"
  },

  "comments_in_php": {
    "prefix": "_?",
    "body": [
      "// ?=========================changes done by mayank singh==========================//"
    ],
    "description": "Query comments"
  },

  "comments_in_php2": {
    "prefix": "_!",
    "body": [
      "// !=========================add by mayank singh==========================//"
    ],
    "description": "comment ! in php"
  },
  "print_R": {
    "prefix": "_R",
    "body": ["<pre>attribute :: {{print_r(attribute)}}</pre>"],
    "description": "<pre>attribute :: {{print_r(attribute)}}</pre>"
  },
  "_die": {
    "prefix": "_die",
    "body": ["die(basename(__FILE__).\" : \".__LINE__);"],
    "description": "die with magic funtion"
  },
  "console.log": {
    "prefix": "_console",
    "body": ["console.log(`%c ${data}`, 'font-size:50px; color: red;');"],
    "description": "console in color"
  }
}
